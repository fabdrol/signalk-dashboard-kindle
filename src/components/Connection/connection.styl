.page-wrapper
  display block
  width 100%
  height 100%
  overflow hidden
  background-color white
  text-align center

  .connection-text
    display block
    margin 100px auto 30px auto
    width 70%
    font-size 1.3em
    line-height 1.6

  .connection-buttons
    display block
    margin 0 auto
    width 70%

    .connection-button-wrapper
      display block
      overflow hidden
      width 100%
      height 50px
      margin-bottom 15px
      text-align center

    .connection-button
      display block
      width 70%
      height 50px
      line-height 50px
      border-radius 3px
      border 2px solid black
      color black
      background-color white
      font-size 1.1em
      margin 0 auto

      > i
        display inline-block
        float left
        height 50px
        line-height 50px
        padding-left 10px
