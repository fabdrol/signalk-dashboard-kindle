html
  box-sizing border-box

*, *:before, *:after
  box-sizing: inherit

html, body, #app, #app-wrapper
  margin 0
  padding 0
  width 100%
  height 100%
  overflow-x hidden
  overflow-y auto
  font-size 100%
  font-family -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif
  position relative
